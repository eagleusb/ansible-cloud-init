{{ ansible_managed | comment }}
# phone_home: if this dictionary is present, then the phone_home
# cloud-config module will post specified data back to the given
# url
# default: none
# phone_home:
#  url: http://my.foo.bar/$INSTANCE/
#  post: all
#  tries: 10
#
{% if cloud_init_phone_home is defined and cloud_init_phone_home.url %}
phone_home:
  url: {{ cloud_init_phone_home.url }}
  post: {{ cloud_init_phone_home.post }}
  tries: {{ cloud_init_phone_home.tries }}
{% endif %}
