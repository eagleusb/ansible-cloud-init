{{ ansible_managed | comment }}
# Update apt database on first boot (run 'apt-get update').
# Note, if packages are given, or package_upgrade is true, then
# update will be done independent of this setting.
#
# Default: false
# Aliases: apt_update
package_update: {{ cloud_init_package.package_update }}
package_upgrade: {{ cloud_init_package.package_upgrade }}
package_reboot_if_required: {{ cloud_init_package.package_reboot_if_required }}

# Install additional packages on first boot
#
# Default: none
#
# if packages are specified, this apt_update will be set to true
#
# packages may be supplied as a single package name or as a list
# with the format [<package>, <version>] wherein the specifc
# package version will be installed.
packages: {{ cloud_init_package.packages }}
